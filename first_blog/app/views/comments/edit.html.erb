<h1>Edit Comment</h1>
<div class="form">
<%= form_for ([@post, @post.comments.build]) do |f| %>
	<div class="form-group">
		<%= f.label :comment_author %>
		<%= f.text_field :comment_author, class: "form-control" %> <br>
	</div>
	<div class="form-group">
		<%= f.label :comment %>
		<%= f.text_area :comment, class: "form-control" %> <br>
	</div>
	<div class="form-group">
		<%= f.submit "Submit Comment", class: "btn btn-success" %>
	</div>
<% end %>

<%= link_to "Cancel", post_path(@post), class: "btn btn-danger" %>
</div>
