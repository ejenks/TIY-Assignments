<h1>New Post</h1>

<div class="form">
	<%= form_for @post do |f| %>
		<div class="form-group">
		 	<%= f.label :title %>
		 	<%= f.text_field :title, class: "form-control" %> <br>
	  </div> 	
		<div class="form-group">
			<%= f.label :body %>
			<%= f.text_area :body, class: "form-control" %> <br>
		</div>
		<div class="form-group">
			<%= f.submit "Submit Post", class: "btn btn-success" %>
		</div>	
	<% end %>
</div>


<br>
<br>
<%= link_to "Cancel", posts_path, class: "btn btn-danger" %>